@using Microsoft.AspNetCore.Identity
@model WebApplication14.ViewModels.RoleViewModels

<h2>Изменение ролей для пользователя @Model.UserName</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.identityRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRole.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>